<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

    <style name="AppDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fragment_open_enter</item>
        <item name="android:windowExitAnimation">@anim/fragment_close_exit</item>
    </style>

    <style name="SingleLineText">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="CardTitle">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

</resources>